# Jaeger AI Environment Configuration
# Copy this file to .env and fill in your values

# ===================================
# TELEGRAM BOT CONFIGURATION
# ===================================
BOT_TOKEN=your_telegram_bot_token_here

# ===================================
# AI PROVIDERS CONFIGURATION
# ===================================

# Google Gemini (Primary AI - REQUIRED)
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI GPT-4 (Optional - for advanced strategy planning)
# Get from: https://platform.openai.com/api-keys
# Cost: ~$10-20 per 1M tokens
OPENAI_API_KEY=

# Anthropic Claude (Optional - for detailed analysis)
# Get from: https://console.anthropic.com/
# Cost: ~$15 per 1M tokens
CLAUDE_API_KEY=

# ===================================
# DATABASE CONFIGURATION
# ===================================

# For development (SQLite)
DATABASE_PATH=./jaeger.db

# For production (PostgreSQL)
DATABASE_URL=postgresql://jaeger:password@localhost:5432/jaeger_db
POSTGRES_PASSWORD=change_this_password

# ===================================
# REDIS CONFIGURATION (Optional)
# ===================================
# For session management and caching in production
REDIS_URL=redis://localhost:6379

# ===================================
# MONITORING CONFIGURATION
# ===================================
GRAFANA_PASSWORD=admin123
LOG_LEVEL=info

# ===================================
# PERFORMANCE SETTINGS
# ===================================
MAX_CONCURRENT_USERS=1000
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=20

# ===================================
# SECURITY SETTINGS
# ===================================
NODE_ENV=development