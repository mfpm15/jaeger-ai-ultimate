# Jaeger AI Environment Configuration
# Copy this file to .env and fill in your values

# ===================================
# TELEGRAM BOT CONFIGURATION
# ===================================
BOT_TOKEN=your_telegram_bot_token_here

# ===================================
# AI PROVIDERS CONFIGURATION
# ===================================

# OpenRouter Primary (Sonoma Sky - REQUIRED)
# Get from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_primary_openrouter_key_here

# OpenRouter Backup (DeepSeek - REQUIRED)
# Get from: https://openrouter.ai/keys
OPENROUTER_API_KEY_BACKUP=your_backup_openrouter_key_here

# Legacy Gemini Support (Optional - Fallback only)
GEMINI_API_KEY=your_gemini_key_for_fallback

# ===================================
# DATABASE CONFIGURATION
# ===================================

# For development (SQLite)
DATABASE_PATH=./jaeger.db

# For production (PostgreSQL)
DATABASE_URL=postgresql://jaeger:password@localhost:5432/jaeger_db
POSTGRES_PASSWORD=change_this_password

# ===================================
# REDIS CONFIGURATION (Optional)
# ===================================
# For session management and caching in production
REDIS_URL=redis://localhost:6379

# ===================================
# MONITORING CONFIGURATION
# ===================================
GRAFANA_PASSWORD=admin123
LOG_LEVEL=info

# ===================================
# PERFORMANCE SETTINGS
# ===================================
MAX_CONCURRENT_USERS=1000
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=20

# ===================================
# SECURITY SETTINGS
# ===================================
NODE_ENV=development